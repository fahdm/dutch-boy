<%- include('../partials/header') %> <br><br><br>

<h3 class="p-6">Customer Details</h3>

<div class="flow-root rounded-lg border border-gray-100 p-6 shadow-sm">
  <dl class="-my-3 divide-y divide-gray-100 text-sm">
    <% Object.entries(customer.toObject()).forEach(([key, value]) => {
      if (key !== '_id' && key !== '__v') { %>
        <div class="grid grid-cols-1 gap-1 p-3 even:bg-gray-50 sm:grid-cols-3 sm:gap-4">
          <dt class="font-medium text-gray-900"><%= key %></dt>
          <dd class="text-gray-700 sm:col-span-2"><%= value %></dd>
        </div>
    <%   }
    }); %>
  </dl>
</div>

<div class="mt-4">
  <a href="/customers/<%= customer._id %>/edit" class="inline-block rounded bg-blue-600 px-4 py-2 text-xs font-medium text-white hover:bg-blue-700">
    Edit
  </a>
</div>

<%- include('../partials/footer') %>
