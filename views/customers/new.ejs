<%- include('../partials/header') %>

    <section class="bg-gray-100">
        <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-x-16 gap-y-8 lg:grid-cols-5">
                <div class="lg:col-span-2 lg:py-12">
                    <p class="max-w-xl text-lg">
                        Use Dutchboy to add customer details.
                        For each client that walks into your doors.
                        Remember to always get consent before adding customer information.
                        If you need assistance with the using Dutchboy
                        Give us a call we are more than happy to help.
                    </p>

                    <div class="mt-8">
                        <a href="#" class="text-2xl font-bold text-pink-600"> 678 999 8212 </a>

                        <address class="mt-2 not-italic">Renton, WA 98056</address>
                    </div>
                </div>

                <div class="rounded-lg bg-white p-8 shadow-lg lg:col-span-3 lg:p-12">


                    <form action="/customers" method="POST" class="space-y-4">
                        <div>
                            <label class="sr-only" for="name">Name</label>
                            <input class="w-full rounded-lg border-gray-200 p-3 text-sm" placeholder="Name" type="text"
                                id="name" />
                        </div>

                        <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                            <div>
                                <label class="sr-only" for="email">Email</label>
                                <input class="w-full rounded-lg border-gray-200 p-3 text-sm" placeholder="Email address"
                                    type="email" id="email" />
                            </div>

                            <div>
                                <label class="sr-only" for="phone">Phone</label>
                                <input class="w-full rounded-lg border-gray-200 p-3 text-sm" placeholder="Phone Number"
                                    type="tel" id="phone" />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 gap-4 text-center sm:grid-cols-3">
                            <div>
                                <label for="street"
                                    class="block w-full rounded-lg border border-gray-200 p-3 text-gray-600"
                                    tabindex="0">
        
                                    <input id="street" type="text" name="street"
                                        placeholder="Street address" />
                                </label>

                            </div>

                            <div>
                                <label for="city"
                                class="block w-full rounded-lg border border-gray-200 p-3 text-gray-600"
                                tabindex="0">
    
                                <input id="city" type="text" name="city"
                                    placeholder="City" />
                            </label>
                            </div>

                            <div>
                                <label for="zipcode"
                                class="block w-full rounded-lg border border-gray-200 p-3 text-gray-600"
                                tabindex="0">
    
                                <input id="zipcode" type="text" name="zipcode"
                                    placeholder="ZipCode" />
                            </label>
                            </div>
                        </div>

                        <div>
                            <label class="sr-only" for="message">notes</label>

                            <textarea class="w-full rounded-lg border-gray-200 p-3 text-sm"
                                placeholder="Add customer notes for example the birthday" rows="8"
                                id="notes"></textarea>
                        </div>

                        <div class="mt-4">
                            <button type="submit"
                                class="inline-block w-full rounded-lg bg-black px-5 py-3 font-medium text-white sm:w-auto">
                                Add Customer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <%- include('../partials/footer') %>